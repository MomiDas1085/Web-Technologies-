<!DOCTYPE html>

<html>

<body>

<form id="f" onsubmit="return validate()">

<label for="e">E-mail:</label><br>

<input type="text" id="e" name="e"><br>

<label for="p">Password:</label><br>

<input type="password" id="p" name="p"><br>

<label for="c">Confirm Password:</label><br>

<input type="password" id="c" name="c"><br><br>

<button type="submit">Submit</button>

</form>

<script>

function validate() {

const p=document.getElementById('p').value;

const c=document.getElementById('c').value;

if (p === c) {

   alert('Registration successful!');

   return true;

} else {

   alert('Error: Passwords do not match!');

   return false;

}}

</script>

</body>

</html>
